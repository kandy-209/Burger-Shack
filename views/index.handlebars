<h1>Burgers</h1>

<h2>EAT ME</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>YUMMY IN MY TUMMY</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/bergers-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> YUMMY
  </div>

  <button type="submit">Add a Burger</button>
</form>